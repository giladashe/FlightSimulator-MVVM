<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        xmlns:Views="clr-namespace:FlightSimulatorApp.Views"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="675" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Views:MyMap x:Name ="myMap"   Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5"/>

        <Views:DashBoard x:Name="myDashBoard" Height="282" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2"/>


        <Views:Joystick x:Name="myJoystick" Grid.Column="3" Grid.Row="2" Elevator="{Binding Path=VM_Elevator, Mode=OneWayToSource}" />
        <Views:AileronSlider >
            
        </Views:AileronSlider>
        <Viewbox Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="64.4,100,0,0" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Top" Width="100">
            <Views:Joystick x:Name="bla" Height="169" Width="16" />
        </Viewbox>


    </Grid>
</Window>
