<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        xmlns:Views="clr-namespace:FlightSimulatorApp.Views"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="675" Width="1200">
    <Grid>

        <Views:MyMap x:Name ="myMap"   />

        <Views:DashBoard x:Name="myDashBoard"/>

        <Viewbox Margin="576,0,0.2,0" >
            <Views:AileronSlider Height="500" Width="1000" >

            </Views:AileronSlider>
        </Viewbox>
        
        <Viewbox Margin="762,259,-102.8,-68">
            <Views:Joystick x:Name="myJoystick" Elevator="{Binding Path=VM_Elevator, Mode=OneWayToSource}"  Height="815" Width="744" />
        </Viewbox>


    </Grid>
</Window>
